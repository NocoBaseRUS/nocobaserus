{
  "name": "@nocobase/app",
  "version": "0.4.0-alpha.7",
  "scripts": {
    "start": "concurrently \"cd ../../ && nodemon\" \"umi dev\"",
    "start-client": "umi dev",
    "start-server": "nodemon",
    "build": "npm run build-server && npm run build-client",
    "build-client": "umi build",
    "nocobase": "cross-env TS_NODE_PROJECT=\"tsconfig.api.json\" ts-node ./src/api/index.ts",
    "build-server": "rimraf -rf lib && tsc --project tsconfig.api.json",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@nocobase/client": "^0.4.0-alpha.7",
    "@umijs/preset-react": "1.x",
    "umi": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/test": "^3.4.15",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "mockjs": "^1.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.0",
    "react": "17.x",
    "react-dom": "17.x",
    "ts-node": "^10.2.1",
    "yorkie": "^2.0.0"
  }
}
