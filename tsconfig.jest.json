{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "paths": {
      "@nocobase/app-*": [
        "packages/app/*/src"
      ],
      "@nocobase/plugin-*": [
        "packages/plugins/*/src"
      ],
      "@nocobase/*": [
        "packages/core/*/src"
      ]
    }
  },
  "exclude": ["./packages/*/esm", "./packages/*/lib"]
}