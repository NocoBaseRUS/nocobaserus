    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.6.3",
    "koa-bodyparser": "^4.3.0",
    "lerna": "^3.22.0",
    "mockjs": "^1.1.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "prettier": "^2.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "4.1.5"
  }
