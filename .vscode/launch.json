  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "cmd": "${workspaceRoot}",
      "runtimeArgs": [
        "-r", "dotenv/config",
        "-r", "tsconfig-paths/register",
        "-r", "ts-node/register"
      ],
      "args": ["${workspaceRoot}/packages/app/server/src/index.ts", "start"],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "test",
        "--runInBand",
        // could be any single file path to debug
        "${workspaceFolder}/packages/"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
